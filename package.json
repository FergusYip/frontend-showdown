{
  "name": "ritter-remix",
  "description": "",
  "version": "1.0.0",
  "license": "",
  "private": true,
  "scripts": {
    "build": "yarn build-css && remix build",
    "dev": "concurrently \"yarn:remix-dev\" \"yarn:watch-css\"",
    "postinstall": "remix setup node",
    "start": "remix setup node && remix-serve build",
    "remix-dev": "dotenv remix dev",
    "watch-css": "postcss styles --base styles --dir app/styles -w",
    "build-css": "postcss styles --base styles --dir app/styles --env production",
    "migrate:reset": "prisma migrate reset",
    "migrate:create": "prisma migrate dev --create-only",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.2",
    "@prisma/client": "^3.5.0",
    "@remix-run/dev": "^1.0.3",
    "@remix-run/react": "^1.0.3",
    "@remix-run/serve": "^1.0.3",
    "dayjs": "^1.10.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.3",
    "remix-auth": "^2.4.1"
  },
  "devDependencies": {
    "@types/faker": "^5.5.9",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.4.0",
    "dotenv-cli": "^4.1.0",
    "faker": "^5.5.3",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2",
    "prisma": "^3.5.0",
    "tailwindcss": "^2.2.19",
    "ts-node": "^10.4.0",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "sideEffects": false
}
