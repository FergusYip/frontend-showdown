{
  "name": "@frontend-showdown/remix",
  "description": "",
  "version": "1.0.0",
  "license": "",
  "private": true,
  "scripts": {
    "build": "yarn build-css && remix build",
    "dev": "concurrently \"yarn:netlify-dev\" \"yarn:watch-css\" \"yarn:remix-watch\"",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "remix-watch": "remix watch",
    "netlify-dev": "cross-env NODE_ENV=development netlify dev",
    "watch-css": "postcss styles --base styles --dir app/styles -w",
    "build-css": "postcss styles --base styles --dir app/styles --env production"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.2",
    "@prisma/client": "^3.5.0",
    "@remix-run/netlify": "^1.0.4",
    "@remix-run/react": "^1.0.3",
    "@remix-run/serve": "^1.0.3",
    "cross-env": "^7.0.3",
    "dayjs": "^1.10.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.3",
    "remix-auth": "^2.4.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.4.0",
    "dotenv-cli": "^4.1.0",
    "netlify-cli": "^7.1.0",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2",
    "prisma": "^3.5.0",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
